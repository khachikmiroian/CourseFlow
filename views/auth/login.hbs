<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a
            class="active"
            href="#register"
          >Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
      {{#if loginError}}
        <p class="allert">{{loginError}}</p>
      {{/if}}
      <h1>Log in to </h1>
      <form action="/auth/login" method="POST">
        <div class="input-field">
          <input
            id="email"
            name="email"
            type="email"
            class="validate"
            required
          />
          <label for="email">Email</label>
          <span
            class="helper-text"
            data-error="Type Email"
            data-success="right"
          ></span>
        </div>
        <div class="input-field">
          <input
            id="password"
            name="password"
            type="password"
            class="validate"
            required
          />
          <label for="password">Password</label>
          <span
            class="helper-text"
            data-error="Type Password"
            data-success="right"
          ></span>

        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <p><a href="/auth/reset">Forgot password?</a></p>

        <button class="btn btn-primary" type="submit">Log in</button>
      </form>
    </div>
    <div id="register" class="col s6 offset-s3">
      {{#if registerError}}
        <p class="allert">{{registerError}}</p>
      {{/if}}
      <h1>Register</h1>

      <form action="/auth/register" method="POST" novalidate>
        <div class="input-field">
          <input
            id="remail"
            name="email"
            type="email"
            class="validate"
            required
          />
          <label for="remail">Email</label>
          <span
            class="helper-text"
            data-error="Type Email"
            data-success="right"
          ></span>
        </div>
        <div class="input-field">
          <input id="name" name="name" type="text" class="validate" required />
          <label for="name">Name</label>
          <span
            class="helper-text"
            data-error="Type Name"
            data-success="right"
          ></span>

        </div>
        <div class="input-field">
          <input
            id="rpassword"
            name="password"
            type="password"
            class="validate"
            required
          />
          <label for="rpassword">Password</label>
          <span
            class="helper-text"
            data-error="Type Password"
            data-success="right"
          ></span>

        </div>
        <div class="input-field">
          <input
            id="confirm"
            name="confirm"
            type="password"
            class="validate"
            required
          />
          <label for="confirm">Password second time</label>
          <span
            class="helper-text"
            data-error="Type Password"
            data-success="right"
          ></span>

        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}" />

        <button class="btn btn-primary" type="submit">Register </button>
      </form>
    </div>
  </div>
</div>